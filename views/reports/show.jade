                                input#inputDifferentiationPartnershipsNo(type="radio", value="false", disabled="disabled", name="differentiationPartnerships", checked=('#{report.differentiationPartnerships}'==='false' ? "checked" : undefined))
                                label(for="inputDifferentiationPartnershipsNo")
                                    span.sr-only No
                    .differentiationNotes
                        label Notes
                        .text #{report.differentiationNotes}
                section.financials.category#financials
                    .header
                        .left
                            h2 Financials
                            label Category Rating
                        input.rating.form-control#financialsRating(type="text", name="financialsRating",placeholder="1-5",value="#{report.financialsRating}",data-show-caption="false",data-show-clear="false",data-hover-enabled="true",data-empty-star='<i class="glyphicon glyphicon-record"></i>',data-filled-star='<i class="glyphicon glyphicon-record"></i>',data-step="1",data-default-caption="{rating}", data-star-captions="",data-star-caption-classes="",data-size="sm",data-disabled="true")
                    .yesno-group
                        .form-group.yesno
                            label Does the company have a recurring revenue stream or high repeat purchases from customers?
                            .yes
                                input#inputFinancialsStreamYes(type="radio", value="true", disabled="disabled", name="financialsStream", checked=('#{report.financialsStream}'==='true' ? "checked" : undefined))
                                label(for="inputFinancialsStreamYes")
                                    span.sr-only Yes
                            .no
                                input#inputFinancialsStreamNo(type="radio", value="false", disabled="disabled", name="financialsStream", checked=('#{report.financialsStream}'==='false' ? "checked" : undefined))
                                label(for="inputFinancialsStreamNo")
                                    span.sr-only No
                        .form-group.yesno
                            label Is valuation at market level versus other similar stage equity crowdfunded companies?
