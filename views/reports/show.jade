                                input#inputDifferentiationPartnershipsYes(type="radio", value="true", disabled="disabled", name="differentiationPartnerships", checked=('#{report.differentiationPartnerships}'==='true' ? "checked" : undefined))
                                label(for="inputDifferentiationPartnershipsYes")
